<!--index.wxml-->
<view style='height: 100%;width: 100%;'>
  <!-- 书本类型选择 -->
  <view class="page-body">
    <view style='height: 50vh;' class="page-section page-section-spacing swiper">
      <swiper previous-margin="0px" next-margin="90px" style='height: 100%;' indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" display-multiple-items bindchange="bookChange">
        <block wx:for="{{booklist}}" wx:key="*this">
          <swiper-item item-id="{{item.id}}">
            <view class="swiper-item {{item.class}}" style='height: 100%;background-color: white;display:flex;flex-flow: nowrap;flex-direction:row;justify-content:center'>
              <view bindtap='gotoBookEdit' style='margin-top:10px;height:80%;width:40vw;background-color: #666666'>
                <view style='margin-top:80px;display:flex;flex-direction:row;justify-content:center;'>
                  <text>{{item.name}}</text>
                </view>
              </view>
            </view>
            <!-- </view> -->
          </swiper-item>
        </block>
              <swiper-item item-id="{{item}}">
            <!-- <view class="swiper-item {{item}}"> -->
            <view class="swiper-item {{item}}" style='height: 100%;background-color: white;display:flex;flex-flow: nowrap;flex-direction:row;justify-content:center'>
              <view bindtap='gotoBookAdd' style='margin-top:10px;height:80%;width:40vw;background-color: #666666'>
                <view style='margin-top:80px;display:flex;flex-direction:row;justify-content:center;'>
                  <text>{{"点此新增作品"+index}}</text>
                </view>
              </view>
            </view>
            <!-- </view> -->
          </swiper-item>
      </swiper>
    </view>
    <view style='height: 10vh;' class="page-section page-section-spacing">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_switch">
          <view  bindtap="gotoChapterList" class="weui-cell__bd">
            {{book}}全部章节(共1章/10000字)
          </view>
          <!-- <view class="weui-cell__ft">
            <icon type="success_no_circle" size="40" color="gray" />
          </view> -->
        </view>
      </view>
    </view>
    <scroll-view scroll-y style='height: 40vh;' bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
      <view id="first" class="weui-cell  scroll-view-item weui-cell_access" hover-class="weui-cell_active">
        <view bindtap="gotoChapterEdit" class="weui-cell__bd" >
         第六章 哦哦哦哦哦哦哦哦哦哦哦哦
        </view>
        <view  bindtap="open" class="weui-cell__ft">
          <icon type="success_no_circle" size="20" color="gray" />
        </view>
      </view>
            <view id="first" class="weui-cell  scroll-view-item weui-cell_access" hover-class="weui-cell_active">
        <view bindtap="gotoChapterEdit" class="weui-cell__bd" >
         第五章 的点点滴滴多多多
        </view>
        <view  bindtap="open" class="weui-cell__ft">
          <icon type="success_no_circle" size="20" color="gray" />
        </view>
      </view>
            <view id="first" class="weui-cell  scroll-view-item weui-cell_access" hover-class="weui-cell_active">
        <view  bindtap="gotoChapterEdit" class="weui-cell__bd" >
         第四章
        </view>
        <view class="weui-cell__ft">
          <icon type="success_no_circle" size="20" color="gray" />
        </view>
      </view>
